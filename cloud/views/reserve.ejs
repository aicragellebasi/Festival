			<form id="formVerify" action="/reserve/step2" method="post">
			  <fieldset class="form-group">
			    <label class="sr-only" for="email1">Email address</label>
			    <input type="email" id="email1" placeholder="Enter email">
			  </fieldset>
			  <fieldset>
			    <label class="sr-only" for="email2">Verify Email</label>
			    <input type="email" id="email2" placeholder="Verify your email">
			  </fieldset>
			  <button type="submit" id="SubmitVerify">Verify</button>
			</form>	
		</div>
	</section>
	<footer><% include footer %></footer>
</div>

