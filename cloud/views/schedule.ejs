<!doctype html>
<html lang="en">
<head>
<% include metas %>
<title>Primavera de los Realizadores</title> 
</head>

<body id="schedule">

<% include nav %>

<div class="container">
	<header>
            <a href="/">
                <img src="/img/logo.png" id="logo">
            </a>
                <h1><a href="index.html">Primavera de los Realizadores</a></h1>
                <h2>April 16, 17 and 18. Instituto Cervantes. New York.<br><%= message %></h2>
                <img src="/img/mainImg-01.png" id="perroAndalous">
	</header>
	<section id="main">
		<table cellpadding="10">
			<tr>
				<td class="flor"></td>
				<th>DAY 1: <small>April 16</small></th>
				<th>DAY 2: <small>April 17</small></th>
				<th>DAY 3: <small>April 18</small></th>
			</tr>
			<tr class="workshopsRow">
				<td class="flor">
					<img src="/img/featworkshop.jpg">
				</td>
				<% if (workshops) { %>
				<% for (var i=0; i<workshops.length; i++){ %>
				<td>
					<div class="details">
						<h4><a href="/details-activity/<%= workshops[i].id %>"><%=workshops[i].get('title')%></a></h4>
						<p>
							<% var staffs = workshops[i].get('staffID') %>
							<% for (var j=0; j<staffs.length; j++){ %>
								<a href="/staff/<%= staffs[j].id %>"><%= staffs[j].get('fname') %> <%= staffs[j].get('lname') %></a>,
							<% } %>
						</p>
						<%
							var date = new Date(workshops[i].get('date'));
						%>
						<p><%=date.getMonth()%>/<%=date.getDate()%>/<%=date.getFullYear()%> <%=date.getHours()%>:<%=date.getMinutes()>9 ? date.getMinutes() : ('0' + date.getMinutes())%></p>
						<p class="intro"><%=workshops[i].get('desc')%></p>
						<a href="http://festival.parseapp.com/reserve/<%= workshops[i].id %>" class="button">Reserve</a>
					</div>
				</td>
				<% } %>
				<% } %>
			</tr>
			<tr class="moviesRow">
				<td class="flor">
					<img src="/img/featmovie.jpg">
				</td>
				<% if (movies) { %>
				<% for (var i=0; i<movies.length; i++){ %>
				<td>
					<div class="details">
						<h4><a href="/details-activity/<%= movies[i].id %>"><%=movies[i].get('title')%></a></h4>
						<p>
							<% var staffs = movies[i].get('staffID') %>
							<% for (var j=0; j<staffs.length; j++){ %>
								<a href="/staff/<%= staffs[j].id %>"><%= staffs[j].get('fname') %> <%= staffs[j].get('lname') %></a>, 
							<% } %>
						</p>
						<p><%=movies[i].get('date')%></p>
						<p class="intro"><%=movies[i].get('desc')%></p>
						<a href="http://festival.parseapp.com/reserve/<%= movies[i].id %>" class="button">Reserve</a>
					</div>
				</td>
				<% } %>
				<% } %>
			</tr>
			<tr class="debatesRow">
				<td class="flor">
					<img src="/img/featdebate.jpg">
				</td>
				<% if (debates) { %>
				<% for (var i=0; i<debates.length; i++){ %>
				<td>
					<div class="details">
						<h4><a href="/details-activity/<%= debates[i].id %>"><%=debates[i].get('title')%></a></h4>
						<p>
							<% var staffs = debates[i].get('staffID') %>
							<% for (var j=0; j<staffs.length; j++){ %>
								<a href="/staff/<%= staffs[j].id %>"><%= staffs[j].get('fname') %> <%= staffs[j].get('lname') %></a>,
							<% } %>
						</p>
						<p><%=debates[i].get('date')%></p>
						<p class="intro"><%=debates[i].get('desc')%></p>
						<a href="http://festival.parseapp.com/reserve/<%= debates[i].id %>" class="button">Reserve</a>
					</div>
				</td>
				<% } %>
				<% } %>
			</tr>
		</table>
	</section>
	<footer><% include footer %></footer>
</div>

